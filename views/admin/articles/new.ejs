<%- include('../../components/header') %>

<%- include('../../components/navbar') %>

<div class="container">
    <hr>

    <div class="card">
        <div class="card-header">
            <h2>Novo Artigo</h2>
        </div>
        <div class="card-body">
            <form action="/articles/save" method="POST" >
                <input class="form-control" type="text" name="title" placeholder="Defina o TÃ­tulo do Artigo" required>
                <br>
                <textarea class="form-control" name="body" id="article" placeholder="Escreva o Artigo Aqui"></textarea>
                <br>
                <label>Categorias:</label>
                <select class="form-control" name="category">
                    <% categories.forEach((category) => { %>
                        <option value="<%=category.id %>"><%=category.title %></option>
                    <% }) %>
                </select>
                <br>
                <button class="btn btn-success" > Cadastrar </button>
            </form>    
        </div>
    </div>
</div>

<%- include('../../components/footer') %>

<script src="/tinymce/tinymce.min.js" ></script>
<script>
    tinymce.init({
        selector: "#article",
        plugins: [
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
        ]
    });
</script>
